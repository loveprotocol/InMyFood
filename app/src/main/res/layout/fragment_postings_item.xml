<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/posting_page_margin">

    <androidx.cardview.widget.CardView
        android:id="@+id/frag_postings_item_cv_food"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="h, 1:1">

        <ImageView
            android:id="@+id/frag_postings_item_iv_food"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/k8" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/frag_postings_item_tv_tag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:maxLines="4"
        app:layout_constraintDimensionRatio="h, 3:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_postings_item_cv_food"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        tools:text="#tag1 #tag2 #tag3...." />

</androidx.constraintlayout.widget.ConstraintLayout>